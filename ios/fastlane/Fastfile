# Fastfile for MedDeutsch iOS Deployment
# Usage: fastlane [lane]

default_platform(:ios)

platform :ios do
  # The "beta" lane
  desc "Push a new beta build to TestFlight"
  lane :beta do
    setup_ci if ENV['CI']
    match(type: "appstore", readonly: is_ci)
    update_app_identifier(
      xcodeproj: "Runner.xcodeproj",
      plist_path: "Runner/Info.plist"
    )
    increment_build_number(xcodeproj: "Runner.xcodeproj")
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.meddeutsch.app" => "match AppStore com.meddeutsch.app"
        }
      }
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  # The "release" lane
  desc "Build and release to App Store"
  lane :release do
    setup_ci if ENV['CI']
    match(type: "appstore", readonly: is_ci)
    increment_build_number(xcodeproj: "Runner.xcodeproj")
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.meddeutsch.app" => "match AppStore com.meddeutsch.app"
        }
      }
    )
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false,
      force: true,
      submission_information: {
        add_id_info_uses_idfa: false
      }
    )
  end

  # The "build" lane
  desc "Build the app without uploading"
  lane :build do
    match(type: "appstore")
    increment_build_number(xcodeproj: "Runner.xcodeproj")
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.meddeutsch.app" => "match AppStore com.meddeutsch.app"
        }
      }
    )
  end

  # The "screenshots" lane
  desc "Generate screenshots for App Store"
  lane :screenshots do
    capture_screenshots(
      scheme: "Runner",
      workspace: "Runner.xcworkspace"
    )
    frame_screenshots(white: true)
  end

  # The "register_devices" lane
  desc "Register new devices for ad-hoc distribution"
  lane :register_devices do
    register_devices(
      devices_file: "./fastlane/devices.txt"
    )
    match(type: "development", force_for_new_devices: true)
  end

  # The "sync_certificates" lane
  desc "Sync code signing certificates"
  lane :sync_certificates do
    match(type: "development")
    match(type: "appstore")
  end

  # The "update_metadata" lane
  desc "Update app metadata in App Store Connect"
  lane :update_metadata do
    upload_to_app_store(
      skip_binary_upload: true,
      skip_screenshots: true,
      metadata_path: "./metadata"
    )
  end

  # The "testflight" lane
  desc "Upload to TestFlight only"
  lane :testflight do
    match(type: "appstore")
    increment_build_number(xcodeproj: "Runner.xcodeproj")
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store"
    )
    upload_to_testflight
  end

  # Error block
  error do |lane, exception|
    UI.error("Error in lane #{lane}: #{exception.message}")
  end
end

platform :android do
  # Android lanes (for reference)
  desc "Build Android APK"
  lane :build do
    gradle(
      task: "clean assembleRelease"
    )
  end
end
